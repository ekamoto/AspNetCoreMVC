@model AspNetCoreMVC.Domain.Category
<!-- Vai entender essa merda aqui, isso Ã© para definir namespace !!!??? -->
@using AspNetCoreMVC.Domain

<h1>Cadastro de Categoria</h1>

<form asp-action="Register" asp-controller="Category" method="POST">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label for="Name">Nome</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <button type="submit" class="btn btn-default">Salvar</button>
</form>

<h1>Lista de Categorias</h1>
<div class="form-group">
    
@foreach(var item in ViewBag.ListaCategorias as List<Category>)
{
    <li>
        @item.Name
        <a href="/Category/Index/@item.Id">Editar</a>
        <form asp-action="Delete" asp-controller="Category" method="POST">
            <input asp-for="Id" type="hidden" value="@item.Id">
            <input type="submit" value="Deletar" class="btn btn-default">
        </form>
    </li>
}
</div>